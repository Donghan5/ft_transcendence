{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@trans/common-types/*": ["../../packages/common-types/src/*"]
    }
  },
  "include": [
    "src/**/*.ts"
, "src/auth/google.service.ts"  ],
  "references": [
    { "path": "../../packages/common-types" }
  ],
  "exclude": [
    "node_modules",
    "dist",
  ],
  "scripts": {
    "test": "mocha -r ts-node/register src/**/*.test.ts"
  }
}
